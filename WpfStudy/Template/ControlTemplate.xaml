<Window x:Class="WpfStudy.Template.ControlTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStudy.Template"
        mc:Ignorable="d"
        Title="ControlTemplate" Height="300" Width="300">
    <Grid>
        <Button Content="버튼" Height="30" HorizontalAlignment="Center" Name="BtnTest" VerticalAlignment="Center" Width="75" Click="BtnTest_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="Yellow" Stroke="Red" />
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="툴팁나와라"/> <!-- Content 프로퍼티를 제어-->
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
