<Window x:Class="WpfStudy.Converter.DateConverter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStudy.Converter"
        mc:Ignorable="d"
        Title="DateConverter" Height="300" Width="300">
    <Window.Resources>
        <local:PostDateConverter x:Key="pdConverter"></local:PostDateConverter>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="lstMemo">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}"></TextBlock>
                        <TextBlock Text="{Binding PostDate, Converter={StaticResource pdConverter}, ConverterParameter='\{0:yyyy년 MM월 dd일\}' }"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
